
<div class="centerCard mt-4" style="max-width: 100%">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/img/image.jpg" class="img-fluid rounded-start" alt="img">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h1 class="card-title">{{product.title}}</h1>
        <div class="mt-5">
        <p class="card-text">Precio: ${{product.price}}</p>
        <p class="card-text">Descripción: {{product.description}}</p>
        <p class="card-text">Stock disponible: {{product.stock}}</p>
        </div>

        {{#if isInCart}}
        <form action="/api/cart/{{user.idCart}}/product/{{product._id}}?_method=PUT" method="POST">
          <div class="card-body d-flex justify-content-evenly">
            <input type="hidden" name="_method" value="PUT">
            <label>Cantidad:</label>
            <input type="number" class="w-25" name="quantity">
            <button type="submit" class="btn btn-outline-secondary">Agregar al carrito</button>
          </div>
        </form>     
        {{else}}
        <form action="/api/cart/{{user.idCart}}/product/{{product._id}}" method="post">
          <div class="card-body d-flex justify-content-evenly">
            <label>Cantidad:</label>
            <input type="number" class="w-25" name="quantity" required>
            <button type="submit" class="btn btn-outline-secondary">Agregar al carrito</button>
          </div>
        </form>
        {{/if}}

      </div>
    </div>
  </div>
</div>

