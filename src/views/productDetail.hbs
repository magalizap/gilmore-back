
<div class="centerCard mt-4" style="max-width: 100%">
  <div class="row g-0">
    <div class="col-md-4">
      <img src={{product.thumbnail}} class="img-fluid rounded-start" alt="img">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h1 class="card-title">{{product.title}}</h1>
        <div class="mt-5">
          <p class="card-text">Precio: ${{product.price}}</p>
          <p class="card-text">Descripción: {{product.description}}</p>
          <p class="card-text">Stock disponible: {{product.stock}}</p>
        </div>

        {{#if isInCart}}
        <form action="/api/cart/{{user.idCart}}/product/{{product._id}}?_method=PUT" method="POST">
          <div class="card-body d-flex justify-content-evenly">
            <input type="hidden" name="_method" value="PUT">
            <div class="row g-3 mt-4 align-items-center">
              <div class="col-auto">
                <label class="col-form-label">Cantidad:</label>
              </div>
              <div class="col-auto">
                <input type="number" name="quantity"  class="form-control" required>
              </div>
              <div class="col-auto">
                <button type="submit" class="btn btn-outline-secondary">Agregar al carrito</button>
              </div>
            </div>
        </form>     
        {{else}}
        <form action="/api/cart/{{user.idCart}}/product/{{product._id}}" method="post">
          <div class="row g-3 mt-4 align-items-center">
            <div class="col-auto">
              <label class="col-form-label">Cantidad:</label>
            </div>
            <div class="col-auto">
              <input type="number" name="quantity"  class="form-control" required>
            </div>
            <div class="col-auto">
              <button type="submit" class="btn btn-outline-secondary">Agregar al carrito</button>
            </div>
          </div>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
</div>

